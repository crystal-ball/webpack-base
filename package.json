{
  "name": "@crystal-ball/webpack-base",
  "version": "8.0.0",
  "description": "Customizable webpack base configuration generator",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/webpack-base.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "webpack",
    "configuration",
    "customizable"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "container": "docker-compose run --service-ports --rm app",
    "container:test": "docker-compose run --rm webpack",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty scripts scripts src",
    "test:unit": "jest src",
    "test:ci": "docker-compose -f docker-compose.test.yml up --exit-code-from cypress",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "format": "prettier --write '*.{js,json,md}' '**/*.{js,json,md,mdx,scss}' !CHANGELOG.md"
  },
  "dependencies": {
    "@mdx-js/loader": "1.5.6",
    "@svgr/webpack": "5.1.0",
    "autoprefixer": "9.7.4",
    "babel-loader": "8.0.6",
    "case-sensitive-paths-webpack-plugin": "2.3.0",
    "chalk": "3.0.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.1.1",
    "css-loader": "3.4.2",
    "duplicate-package-checker-webpack-plugin": "3.0.0",
    "eslint-loader": "3.0.3",
    "file-loader": "5.1.0",
    "friendly-errors-webpack-plugin": "1.7.0",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.9.0",
    "node-sass": "4.13.1",
    "optimize-css-assets-webpack-plugin": "5.0.3",
    "postcss-custom-properties": "9.1.1",
    "postcss-loader": "3.0.0",
    "progress-bar-webpack-plugin": "2.1.0",
    "raw-loader": "4.0.0",
    "sass-loader": "8.0.2",
    "style-loader": "1.1.3",
    "svg-symbol-sprite-loader": "4.0.0",
    "webpack": "4.41.6",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.10.3",
    "webpack-merge": "4.2.2"
  },
  "devDependencies": {
    "@crystal-ball/commitizen-base": "2.3.0",
    "@crystal-ball/prettier-base": "1.6.0",
    "@crystal-ball/semantic-release-base": "2.13.0",
    "@percy/cypress": "2.3.0",
    "@types/jest": "25.1.3",
    "cypress": "4.0.2",
    "eslint-config-eloquence": "13.3.0",
    "husky": "4.2.3",
    "jest": "25.1.0"
  },
  "prettier": "@crystal-ball/prettier-base",
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "release": {
    "extends": [
      "@crystal-ball/semantic-release-base"
    ]
  }
}
