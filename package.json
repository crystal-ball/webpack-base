{
  "name": "@crystal-ball/webpack-base",
  "version": "10.4.0",
  "description": "Customizable webpack base configuration generator",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/webpack-base.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "webpack",
    "configuration",
    "customizable"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "container": "docker-compose run --service-ports --rm app",
    "container:test": "docker-compose run --rm webpack",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty .",
    "test:unit": "jest src",
    "test:ci": "docker-compose -f docker-compose.test.yml up --exit-code-from cypress",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "format": "prettier --write . !CHANGELOG.md !coverage"
  },
  "dependencies": {
    "@mdx-js/loader": "1.6.22",
    "@svgr/webpack": "5.5.0",
    "autoprefixer": "10.2.4",
    "babel-loader": "8.2.2",
    "case-sensitive-paths-webpack-plugin": "2.3.0",
    "chalk": "4.1.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.4.1",
    "css-loader": "5.0.2",
    "duplicate-package-checker-webpack-plugin": "3.0.0",
    "eslint-loader": "4.0.2",
    "file-loader": "6.2.0",
    "friendly-errors-webpack-plugin": "1.7.0",
    "html-webpack-plugin": "4.5.1",
    "mini-css-extract-plugin": "1.3.7",
    "postcss": "8.2.6",
    "postcss-loader": "4.2.0",
    "progress-bar-webpack-plugin": "2.1.0",
    "raw-loader": "4.0.2",
    "sass": "1.32.7",
    "sass-loader": "10.1.1",
    "style-loader": "2.0.0",
    "svg-symbol-sprite-loader": "5.0.0",
    "webpack": "4.46.0",
    "webpack-cli": "4.5.0",
    "webpack-dev-server": "3.11.2",
    "webpack-merge": "5.7.3"
  },
  "devDependencies": {
    "@crystal-ball/commitizen-base": "2.10.0",
    "@crystal-ball/prettier-base": "2.6.0",
    "@crystal-ball/semantic-release-base": "2.28.0",
    "@percy/cypress": "2.3.4",
    "@types/jest": "26.0.20",
    "cypress": "6.5.0",
    "eslint-config-eloquence": "17.5.0",
    "husky": "5.1.1",
    "jest": "26.6.3"
  },
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  }
}
