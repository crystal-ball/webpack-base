{
  "name": "@crystal-ball/webpack-base",
  "version": "9.5.0",
  "description": "Customizable webpack base configuration generator",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/webpack-base.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "webpack",
    "configuration",
    "customizable"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "engines": {
    "node": "12"
  },
  "scripts": {
    "container": "docker-compose run --service-ports --rm app",
    "container:test": "docker-compose run --rm webpack",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty --ext .js,.ts __mocks__ cypress scripts src",
    "test:unit": "jest src",
    "test:ci": "docker-compose -f docker-compose.test.yml up --exit-code-from cypress",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "format": "prettier --write '*.{js,json,md}' '**/*.{js,json,md,mdx,scss}' !CHANGELOG.md"
  },
  "dependencies": {
    "@mdx-js/loader": "1.6.4",
    "@svgr/webpack": "5.4.0",
    "autoprefixer": "9.8.0",
    "babel-loader": "8.1.0",
    "case-sensitive-paths-webpack-plugin": "2.3.0",
    "chalk": "4.0.0",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "6.0.1",
    "css-loader": "3.5.3",
    "duplicate-package-checker-webpack-plugin": "3.0.0",
    "eslint-loader": "4.0.2",
    "file-loader": "6.0.0",
    "friendly-errors-webpack-plugin": "1.7.0",
    "html-webpack-plugin": "4.3.0",
    "mini-css-extract-plugin": "0.9.0",
    "postcss-loader": "3.0.0",
    "progress-bar-webpack-plugin": "2.1.0",
    "raw-loader": "4.0.1",
    "sass": "1.26.5",
    "sass-loader": "8.0.2",
    "style-loader": "1.2.1",
    "svg-symbol-sprite-loader": "5.0.0",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11",
    "webpack-dev-server": "3.11.0",
    "webpack-merge": "4.2.2"
  },
  "devDependencies": {
    "@crystal-ball/commitizen-base": "2.7.1",
    "@crystal-ball/prettier-base": "2.2.0",
    "@crystal-ball/semantic-release-base": "2.18.1",
    "@percy/cypress": "2.3.1",
    "@types/jest": "25.2.3",
    "cypress": "4.7.0",
    "eslint-config-eloquence": "13.8.0",
    "husky": "4.2.5",
    "jest": "26.0.1"
  },
  "prettier": "@crystal-ball/prettier-base",
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-base"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "release": {
    "extends": [
      "@crystal-ball/semantic-release-base"
    ]
  },
  "renovate": {
    "extends": [
      "github>crystal-ball/renovate-base:library"
    ]
  }
}
