{
  "name": "@crystal-ball/webpack-base",
  "version": "5.3.4",
  "description": "Customizable webpack base configuration generator",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/crystal-ball/webpack-base.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "webpack",
    "configuration",
    "customizable"
  ],
  "contributors": [
    "Dan Hedgecock <hedgecock.d@gmail.com> (https://danhedgecock.com)"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=8.11"
  },
  "scripts": {
    "postinstall": "bash ./scripts/post-install.sh",
    "container": "docker-compose run --service-ports --rm app",
    "container:test": "docker-compose run --rm webpack",
    "test": "npm run test:lint && npm run test:unit",
    "test:lint": "NODE_ENV=test eslint --format=pretty scripts src",
    "test:unit": "jest src",
    "test:ci": "docker-compose -f docker-compose.test.yml up --exit-code-from cypress",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "format": "prettier --write '*.{js,json,md,json}' '**/*.{md,js,json,scss}'"
  },
  "dependencies": {
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/plugin-transform-react-jsx-source": "7.5.0",
    "@babel/plugin-transform-runtime": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.0.0",
    "@svgr/webpack": "4.3.2",
    "autoprefixer": "9.6.1",
    "babel-loader": "8.0.6",
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "chalk": "2.4.2",
    "clean-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.0.4",
    "core-js": "3.2.1",
    "css-loader": "3.2.0",
    "duplicate-package-checker-webpack-plugin": "3.0.0",
    "eslint-import-resolver-webpack": "0.11.1",
    "eslint-loader": "3.0.0",
    "file-loader": "4.2.0",
    "friendly-errors-webpack-plugin": "1.7.0",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.8.0",
    "node-sass": "4.12.0",
    "postcss-custom-properties": "9.0.2",
    "postcss-loader": "3.0.0",
    "progress-bar-webpack-plugin": "1.12.1",
    "raw-loader": "3.1.0",
    "sass-loader": "8.0.0",
    "style-loader": "1.0.0",
    "svg-symbol-sprite-loader": "3.2.0",
    "webpack": "4.39.3",
    "webpack-cli": "3.3.7",
    "webpack-dev-server": "3.8.0",
    "webpack-merge": "4.2.2"
  },
  "devDependencies": {
    "@crystal-ball/commitizen-adapter": "1.4.0",
    "@crystal-ball/prettier-base": "1.4.0",
    "@crystal-ball/semantic-release-base": "1.6.2",
    "eslint-config-eloquence": "12.4.0",
    "husky": "3.0.5",
    "jest": "24.9.0"
  },
  "config": {
    "commitizen": {
      "path": "@crystal-ball/commitizen-adapter"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  },
  "prettier": "@crystal-ball/prettier-base",
  "release": {
    "extends": [
      "@crystal-ball/semantic-release-base"
    ]
  }
}
